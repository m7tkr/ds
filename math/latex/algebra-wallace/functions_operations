\subsection{operations on functions}

\begin{center}
\begin{tabular}{r l}
    addition & \( (f+g)(x)=f(x)+g(x) \) \\
    substraction & \( (f-g)(x)=f(x)-g(x) \) \\
    multiplication & \( (f \cdot g)(x)=f(x)\cdot g(x) \) \\
    division & \( \left( \frac{f}{g} \right)(x) = \frac{f(x)}{g(x)} \) \\
    composition & \(  (f \circ g)(x)=f(g(x)) \)
\end{tabular}
\end{center}

